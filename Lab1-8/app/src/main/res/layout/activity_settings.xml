<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Câmp pentru dimensiunea textului -->
    <EditText
        android:id="@+id/etTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dimensiune text (ex: 14)" />

    <!-- Câmp pentru codul de culoare hex -->
    <EditText
        android:id="@+id/etTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cod culoare hex (ex: #000000)" />

    <!-- Butonul de salvare -->
    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvează setările" />

</LinearLayout>
